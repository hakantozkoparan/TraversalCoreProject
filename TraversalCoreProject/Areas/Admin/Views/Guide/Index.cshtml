@using EntityLayer.Concrete
@model List<Guide>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int sayac = 0;
}

<h1>Rehber Listesi</h1>

<table class="table table-bordered">
    <tr>
        <td>#</td>
        <td>Görsel</td>
        <td>Ad Soyad</td>
        <td>Açıklama</td>
        <td>Durum</td>
        <td>Düzenle</td>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            @{
                sayac = sayac + 1;
            }
            <td>@sayac</td>
            <td><img src="@item.Image" height="75px" width="75px" /></td>
            <td>@item.Name</td>
            <td>@item.Description</td>
            <td>
                @{
					if (item.Status)
					{
						<span>Aktif</span>
					}
					else
					{
						<span>Pasif</span>
					}
                }
            </td>
            <td><a href="#" class="btn btn-outline-success">Düzenle</a></td>
        </tr>
    }
</table>

<a href="/Admin/Guide/AddGuide" class="btn btn-outline-primary">Yeni Rehber Ekle</a>